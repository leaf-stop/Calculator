<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   android:orientation="vertical"
    tools:context="yeting.com.calculator.MainActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/led"
            android:layout_margin="3dp"
            android:background="#cccfff"
            android:gravity="top"
            android:text=""
            android:textColor="#000000"
            android:textSize="32sp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/time"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="time"
            android:layout_weight="1"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/pow"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="pow"
            android:layout_weight="1"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/sqrt"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="sqrt"
            android:layout_weight="1"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/clear"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="C"
            android:layout_weight="1"
            android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/seven"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="7"
            android:layout_weight="1"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/eight"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="8"
            android:layout_weight="1"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/nine"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="9"
            android:layout_weight="1"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/division"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="/"
            android:layout_weight="1"
            android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/four"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="4"
            android:layout_weight="1"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/five"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="5"
            android:layout_weight="1"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/six"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="6"
            android:layout_weight="1"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/mult"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="*"
            android:layout_weight="1"
            android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_weight="1"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/one"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="1"
        android:layout_weight="1"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/two"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="2"
        android:layout_weight="1"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/three"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="3"
        android:layout_weight="1"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/sub"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="-"
        android:layout_weight="1"
        android:textSize="24sp"/>
</LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/dot"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="."
            android:layout_weight="1"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/zero"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="0"
            android:layout_weight="1"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/add"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="+"
            android:layout_weight="1"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/amount"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="="
            android:layout_weight="1"
            android:textSize="24sp"/>
    </LinearLayout>
</LinearLayout>
